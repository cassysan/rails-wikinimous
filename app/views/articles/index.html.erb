<div class="wrapper">
  <div class="container"><h1>Articles</h1>
    <div class="articles">
      <div class="row">
        <% @articles.each do |article| %>
          <%= link_to article_path(article.id) do %>
          <h3> <%=article.title  %> </h3>
          <% end %>
        <%= link_to delete_path(article.id), method: :delete do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
        <% end %>
      </div>
    </div>
    <hr>
    <%= link_to new_path do %>
    <button class="btn btn-success">Add a new Article</button>
    <% end %>
  </div>
</div>
